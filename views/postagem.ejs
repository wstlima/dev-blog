<% include ./_front_topo.ejs%>
    <section class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp">
        <div class="mdl-card mdl-cell mdl-cell--12-col">
            <div class="mdl-card__supporting-text">
                <h2><%= post.titulo%></h2>
                <%if(editor){%>
                    <a href="/controlpanel/posts/edit/<%= post.posturl%>" type="button" class="mdl-chip">
                        <span class="mdl-chip__text">Editar Postagem</span>
                    </a>
                <%}%>
                <div class="mdl-card__actions mdl-card--border"></div>
                <span><a href="/">Principal</a> >><a href="/categoria/<%=post.categoria%>"><%=post.categoria%></a> >> <a href="/posts/<%= post.posturl%>"><%= post.titulo%></a></span>
                <div class="mdl-card__actions mdl-card--border"></div><br><br>
                <div><%- post.conteudo%></div>                
            </div>             

            <div class="mdl-card__actions">
            <p>Tags: </p>
                <%for(tag of post.tags){%>
                <a href="/tags/<%= tag.toLowerCase()%>" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"><%=tag%></a>
                <%}%>
            </div>

            <div class="mdl-card__actions mdl-card--border">            

            <br>
        </div>
        <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon" id="btn3">
            <i class="material-icons">more_vert</i>
        </button>
        <ul class="mdl-menu mdl-js-menu mdl-menu--bottom-right" for="btn3">
            <li class="mdl-menu__item">Lorem</li>
            <li class="mdl-menu__item" disabled>Ipsum</li>
            <li class="mdl-menu__item">Dolor</li>
        </ul>
    </section>

