<% include ./_painel_topo.ejs%>
<div class="title-block">
    <h3 class="title">
        Nova Categoria <span class="sparkline bar" data-type="bar"></span>
    </h3> </div>
<form name="item" method="post">
    <div class="card card-block">
        <div class="form-group row"> <label class="col-sm-2 form-control-label text-xs-right">
                Nome:
            </label>
            <%if(edit){%>
                <div class="col-sm-10"> <input type="text" value="<%=cat%>" name="nome" class="form-control boxed" placeholder=""> </div>
                <input type="text" hidden name="oldname" value="<%=cat%>">
            <%} else{%>
                <div class="col-sm-10"> <input type="text" name="nome" class="form-control boxed" placeholder=""> </div>
            <%}%>
            
            
        </div>
        
        <div class="form-group row">
            <div class="col-sm-10 col-sm-offset-2"> <button type="submit" class="btn btn-primary">
                    Salvar
                </button> </div>
        </div>
    </div>
</form>

