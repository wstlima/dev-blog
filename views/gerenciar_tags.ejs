<% include ./_painel_topo.ejs%>
<table class="table table-striped table-hover table-bordered">
    <thead>
    <tr>
        <th>#</th>
        <th>Nome</th>
    </tr>
    </thead>
    <tbody>
    <%for(var p of posts){%>
    <tr>
        <td></td>
        <td><%= p.titulo %></td>
        <td><%= p.conteudo %></td>
        <td><%= p.categoria %></td>
        <td><%= p.tags %></td>
        <td><%= 0 %></td>
        <td><a class="btn btn-primary" href="controlpanel/posts/edit/<%= p.posturl %>">Editar</a></td>
        <td><a class="btn btn-primary" href="controlpanel/posts/delete/<%= p.posturl %>">Deletar</a></td>
    </tr>
    <%}%>
    </tbody>
</table>

